extends layout

block content
    .title
      h1 mini messages
    .content-wrapper
      .form
        form(method='POST' action='/new')
          .text-areas
            input#name.name(type='text' name='name' placeholder='Username')
            textarea#messageContent.message-content(placeholder='Enter message here!')
          .submit
            button.submit-button(type='submit') submit
